<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.FragmentContent">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardviewHei"
        android:id="@+id/cardView"
        card_view:cardElevation="6dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:nextFocusRight="@+id/relativeLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageCard"
            android:src="@drawable/imagenf"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"
            android:alpha="120"/>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7000"
            android:nextFocusRight="@+id/titleText"
            android:nextFocusLeft="@+id/cardView">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_star"
                android:id="@+id/favorite"
                android:nextFocusLeft="@+id/voteup"
                android:nextFocusRight="@+id/share"
                android:contentDescription="Favorite" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingStart="5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_share"
                android:id="@+id/share"
                android:nextFocusLeft="@+id/favorite"
                android:contentDescription="Share" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_arrowup"
                android:id="@+id/voteup"
                android:nextFocusLeft="@+id/titleText"
                android:nextFocusRight="@+id/votedown"
                android:contentDescription="Upvote" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="50dp"
                app:srcCompat="@drawable/ic_arrowdown"
                android:id="@+id/votedown"
                android:nextFocusLeft="@+id/voteup"
                android:nextFocusRight="@+id/favorite"
                android:contentDescription="Downvote"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleText"
                android:textSize="16sp"
                android:fontFamily="inherit"
                android:textColor="#FFF"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:shadowColor="#000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:gravity="bottom|center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:nextFocusLeft="@+id/cardView"
                android:nextFocusRight="@+id/voteup"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
