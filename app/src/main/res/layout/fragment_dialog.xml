<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="300dp"
             android:layout_height="320dp"
             android:layout_gravity="center"
             android:animateLayoutChanges="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_world"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_world"/>

        <TextView
            android:id="@+id/text_view_world"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/image_view_world"
            android:clickable="true"
            android:fontFamily="sans-serif"
            android:text="WorldNews"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/image_view_brazil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/text_view_world"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_brazil"/>

        <TextView
            android:id="@+id/text_view_brazil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@+id/image_view_brazil"
            android:clickable="true"
            android:fontFamily="sans-serif"
            android:text="Brazil"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/image_view_us"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/text_view_brazil"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_us"/>

        <TextView
            android:id="@+id/text_view_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="155dp"
            android:layout_toRightOf="@+id/image_view_us"
            android:clickable="true"
            android:fontFamily="sans-serif"
            android:text="United States"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/image_view_canada"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/text_view_us"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_canada"/>

        <TextView
            android:id="@+id/text_view_canada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="225dp"
            android:layout_toRightOf="@+id/image_view_canada"
            android:clickable="true"
            android:fontFamily="sans-serif"
            android:text="Canada"
            android:textColor="#000000"
            android:textSize="16sp"/>

    </RelativeLayout>

</FrameLayout>